<div class="flex flex-col gap-8">
  <div class="flex items-center gap-4">
    <span class="text-muted-foreground">Theme:</span>
    <%= render ThemeToggleComponent.new %>
  </div>

  <div class="flex flex-row flex-wrap items-center gap-12">
  <%= render AvatarComponent.new do |c| %>
    <% c.with_image(src: "https://github.com/shadcn.png", alt: "@shadcn") %>
    <% c.with_fallback { "CN" } %>
  <% end %>

  <%= render AvatarComponent.new(class: "rounded-lg") do |c| %>
    <% c.with_image(src: "https://github.com/evilrabbit.png", alt: "@evilrabbit") %>
    <% c.with_fallback { "ER" } %>
  <% end %>

  <%# Stacked avatars example %>
  <div class="*:data-[slot=avatar]:ring-background flex -space-x-2 *:data-[slot=avatar]:ring-2 *:data-[slot=avatar]:grayscale">
    <%= render AvatarComponent.new do |c| %>
      <% c.with_image(src: "https://github.com/shadcn.png", alt: "@shadcn") %>
      <% c.with_fallback { "CN" } %>
    <% end %>

    <%= render AvatarComponent.new do |c| %>
      <% c.with_image(src: "https://github.com/maxleiter.png", alt: "@maxleiter") %>
      <% c.with_fallback { "ML" } %>
    <% end %>

    <%= render AvatarComponent.new do |c| %>
      <% c.with_image(src: "https://github.com/evilrabbit.png", alt: "@evilrabbit") %>
      <% c.with_fallback { "ER" } %>
    <% end %>
  </div>
  </div>

  <%# Card example %>
  <%= render CardComponent.new(class: "w-full max-w-sm") do |card| %>
    <% card.with_title { "Card Title" } %>
    <% card.with_description { "This is a description of the card. It provides additional context." } %>
    <% card.with_body do %>
      <p>This is the main content area of the card. You can put any content here including forms, lists, or other components.</p>
    <% end %>
    <% card.with_footer do %>
      <p class="text-sm text-muted-foreground">Footer information</p>
    <% end %>
  <% end %>

  <!-- Button Component Examples -->
  <section class="space-y-6 w-full max-w-2xl">
    <h2 class="text-2xl font-bold">Button Examples</h2>

    <!-- Variants -->
    <div class="space-y-2">
      <h3 class="text-lg font-semibold text-muted-foreground">Variants</h3>
      <div class="flex flex-wrap gap-3">
        <%= render ButtonComponent.new(variant: :default) do %>
          Default
        <% end %>
        <%= render ButtonComponent.new(variant: :secondary) do %>
          Secondary
        <% end %>
        <%= render ButtonComponent.new(variant: :destructive) do %>
          Destructive
        <% end %>
        <%= render ButtonComponent.new(variant: :outline) do %>
          Outline
        <% end %>
        <%= render ButtonComponent.new(variant: :ghost) do %>
          Ghost
        <% end %>
        <%= render ButtonComponent.new(variant: :link) do %>
          Link
        <% end %>
      </div>
    </div>

    <!-- Sizes -->
    <div class="space-y-2">
      <h3 class="text-lg font-semibold text-muted-foreground">Sizes</h3>
      <div class="flex flex-wrap items-center gap-3">
        <%= render ButtonComponent.new(size: :sm) do %>
          Small
        <% end %>
        <%= render ButtonComponent.new(size: :default) do %>
          Default
        <% end %>
        <%= render ButtonComponent.new(size: :lg) do %>
          Large
        <% end %>
      </div>
    </div>

    <!-- Icon Buttons -->
    <div class="space-y-2">
      <h3 class="text-lg font-semibold text-muted-foreground">Icon Buttons</h3>
      <div class="flex flex-wrap items-center gap-3">
        <%= render ButtonComponent.new(size: :icon_sm, variant: :outline, aria_label: "Settings") do %>
          <%= lucide_icon("settings", class: "size-4") %>
        <% end %>
        <%= render ButtonComponent.new(size: :icon, variant: :outline, aria_label: "Add item") do %>
          <%= lucide_icon("plus", class: "size-4") %>
        <% end %>
        <%= render ButtonComponent.new(size: :icon_lg, variant: :outline, aria_label: "Search") do %>
          <%= lucide_icon("search", class: "size-5") %>
        <% end %>
      </div>
    </div>

    <!-- With Icons -->
    <div class="space-y-2">
      <h3 class="text-lg font-semibold text-muted-foreground">With Icons</h3>
      <div class="flex flex-wrap items-center gap-3">
        <%= render ButtonComponent.new(variant: :default) do %>
          <%= lucide_icon("rocket", class: "size-4") %>
          Launch
        <% end %>
        <%= render ButtonComponent.new(variant: :outline) do %>
          <%= lucide_icon("download", class: "size-4") %>
          Download
        <% end %>
        <%= render ButtonComponent.new(variant: :secondary) do %>
          Next
          <%= lucide_icon("arrow-right", class: "size-4") %>
        <% end %>
      </div>
    </div>

    <!-- States -->
    <div class="space-y-2">
      <h3 class="text-lg font-semibold text-muted-foreground">Disabled State</h3>
      <div class="flex flex-wrap items-center gap-3">
        <%= render ButtonComponent.new(disabled: true) do %>
          Disabled
        <% end %>
        <%= render ButtonComponent.new(variant: :outline, disabled: true) do %>
          Disabled Outline
        <% end %>
      </div>
    </div>

    <!-- As Link -->
    <div class="space-y-2">
      <h3 class="text-lg font-semibold text-muted-foreground">As Link</h3>
      <div class="flex flex-wrap items-center gap-3">
        <%= render ButtonComponent.new(tag: :a, href: "#") do %>
          Link Button
        <% end %>
        <%= render ButtonComponent.new(tag: :a, href: "#", variant: :outline) do %>
          Outline Link
        <% end %>
      </div>
    </div>
  </section>

  <!-- Accordion Component Examples -->
  <section class="space-y-6 w-full max-w-2xl">
    <h2 class="text-2xl font-bold">Accordion Examples</h2>

    <!-- Single Collapsible (Default) -->
    <div class="space-y-2">
      <h3 class="text-lg font-semibold text-muted-foreground">Single Collapsible</h3>
      <p class="text-sm text-muted-foreground">Only one item open at a time, can close all items.</p>
      <div class="w-full max-w-md">
        <%= render AccordionComponent.new(type: :single, collapsible: true, default_value: "item-1") do |accordion| %>
          <% accordion.with_item(value: "item-1") do |item| %>
            <% item.with_trigger { "Product Information" } %>
            <% item.with_body do %>
              <p class="text-muted-foreground">
                Our flagship product combines cutting-edge technology with sleek design.
                Built with premium materials, it offers unparalleled performance and reliability.
              </p>
            <% end %>
          <% end %>

          <% accordion.with_item(value: "item-2") do |item| %>
            <% item.with_trigger { "Shipping Details" } %>
            <% item.with_body do %>
              <p class="text-muted-foreground">
                We offer worldwide shipping through trusted courier partners.
                Standard delivery takes 3-5 business days, while express shipping
                ensures delivery within 1-2 business days.
              </p>
            <% end %>
          <% end %>

          <% accordion.with_item(value: "item-3") do |item| %>
            <% item.with_trigger { "Return Policy" } %>
            <% item.with_body do %>
              <p class="text-muted-foreground">
                We stand behind our products with a comprehensive 30-day return policy.
                If you're not completely satisfied, simply return the item in its original condition.
              </p>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- Multiple Open -->
    <div class="space-y-2">
      <h3 class="text-lg font-semibold text-muted-foreground">Multiple Open</h3>
      <p class="text-sm text-muted-foreground">Multiple items can be open simultaneously.</p>
      <div class="w-full max-w-md">
        <%= render AccordionComponent.new(type: :multiple, default_value: ["faq-1", "faq-2"]) do |accordion| %>
          <% accordion.with_item(value: "faq-1") do |item| %>
            <% item.with_trigger { "Is it accessible?" } %>
            <% item.with_body do %>
              <p class="text-muted-foreground">
                Yes. The accordion follows WAI-ARIA design patterns with proper keyboard navigation,
                focus management, and screen reader support.
              </p>
            <% end %>
          <% end %>

          <% accordion.with_item(value: "faq-2") do |item| %>
            <% item.with_trigger { "Is it styled?" } %>
            <% item.with_body do %>
              <p class="text-muted-foreground">
                Yes. It comes with default styles that match the shadcn design system
                and can be customized with Tailwind CSS classes.
              </p>
            <% end %>
          <% end %>

          <% accordion.with_item(value: "faq-3") do |item| %>
            <% item.with_trigger { "Is it animated?" } %>
            <% item.with_body do %>
              <p class="text-muted-foreground">
                Yes. The accordion uses CSS grid transitions for smooth open/close animations.
              </p>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- With Disabled Item -->
    <div class="space-y-2">
      <h3 class="text-lg font-semibold text-muted-foreground">With Disabled Item</h3>
      <p class="text-sm text-muted-foreground">Individual items can be disabled.</p>
      <div class="w-full max-w-md">
        <%= render AccordionComponent.new(type: :single, collapsible: true) do |accordion| %>
          <% accordion.with_item(value: "enabled-1") do |item| %>
            <% item.with_trigger { "Available Feature" } %>
            <% item.with_body do %>
              <p class="text-muted-foreground">
                This feature is available and can be expanded.
              </p>
            <% end %>
          <% end %>

          <% accordion.with_item(value: "disabled-1", disabled: true) do |item| %>
            <% item.with_trigger { "Coming Soon (Disabled)" } %>
            <% item.with_body do %>
              <p class="text-muted-foreground">
                This content is not accessible because the item is disabled.
              </p>
            <% end %>
          <% end %>

          <% accordion.with_item(value: "enabled-2") do |item| %>
            <% item.with_trigger { "Another Feature" } %>
            <% item.with_body do %>
              <p class="text-muted-foreground">
                This feature is also available and interactive.
              </p>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </section>

  <!-- Alert Dialog Component Examples -->
  <section class="space-y-6 w-full max-w-2xl">
    <h2 class="text-2xl font-bold">Alert Dialog Examples</h2>

    <!-- Basic Usage -->
    <div class="space-y-2">
      <h3 class="text-lg font-semibold text-muted-foreground">Basic</h3>
      <p class="text-sm text-muted-foreground">A standard confirmation dialog with title, description, and action buttons.</p>
      <div class="flex flex-wrap gap-3">
        <%= render AlertDialogComponent.new do |dialog| %>
          <% dialog.with_trigger { "Show Dialog" } %>
          <% dialog.with_body do |body| %>
            <% body.with_title { "Are you absolutely sure?" } %>
            <% body.with_description do %>
              This action cannot be undone. This will permanently delete your
              account and remove your data from our servers.
            <% end %>
            <% body.with_cancel { "Cancel" } %>
            <% body.with_action { "Continue" } %>
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- Destructive Action -->
    <div class="space-y-2">
      <h3 class="text-lg font-semibold text-muted-foreground">Destructive Action</h3>
      <p class="text-sm text-muted-foreground">Use destructive styling for dangerous actions.</p>
      <div class="flex flex-wrap gap-3">
        <%= render AlertDialogComponent.new do |dialog| %>
          <% dialog.with_trigger(classes: "bg-destructive text-white hover:bg-destructive/90") do %>
            <%= lucide_icon("trash-2", class: "size-4") %>
            Delete Account
          <% end %>
          <% dialog.with_body do |body| %>
            <% body.with_title { "Delete Account" } %>
            <% body.with_description do %>
              Are you sure you want to delete your account? All of your data will be
              permanently removed. This action cannot be undone.
            <% end %>
            <% body.with_cancel { "Cancel" } %>
            <% body.with_action(classes: "bg-destructive text-white hover:bg-destructive/90") { "Yes, delete my account" } %>
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- Custom Trigger -->
    <div class="space-y-2">
      <h3 class="text-lg font-semibold text-muted-foreground">Custom Trigger Styling</h3>
      <p class="text-sm text-muted-foreground">The trigger button can be styled with custom classes.</p>
      <div class="flex flex-wrap gap-3">
        <%= render AlertDialogComponent.new do |dialog| %>
          <% dialog.with_trigger(classes: "border bg-background shadow-xs hover:bg-accent hover:text-accent-foreground") do %>
            <%= lucide_icon("log-out", class: "size-4") %>
            Sign Out
          <% end %>
          <% dialog.with_body do |body| %>
            <% body.with_title { "Sign out of your account?" } %>
            <% body.with_description do %>
              You will need to sign in again to access your account.
            <% end %>
            <% body.with_cancel { "Stay signed in" } %>
            <% body.with_action { "Sign out" } %>
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- Without Description -->
    <div class="space-y-2">
      <h3 class="text-lg font-semibold text-muted-foreground">Without Description</h3>
      <p class="text-sm text-muted-foreground">The description slot is optional.</p>
      <div class="flex flex-wrap gap-3">
        <%= render AlertDialogComponent.new do |dialog| %>
          <% dialog.with_trigger(classes: "bg-secondary text-secondary-foreground shadow-xs hover:bg-secondary/80") { "Quick Confirm" } %>
          <% dialog.with_body do |body| %>
            <% body.with_title { "Confirm this action?" } %>
            <% body.with_cancel { "No" } %>
            <% body.with_action { "Yes" } %>
          <% end %>
        <% end %>
      </div>
    </div>
  </section>

  <!-- Badge Component Examples -->
