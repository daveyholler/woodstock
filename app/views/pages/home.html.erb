      <h3 class="text-lg font-semibold text-muted-foreground">With Icons</h3>
      <div class="flex flex-wrap gap-3">
        <%= render BadgeComponent.new(variant: :default) do %>
          <%= lucide_icon("check", class: "size-3") %>
