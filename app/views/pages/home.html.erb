      <div class="flex flex-wrap items-center gap-3">
        <%= render BadgeComponent.new(classes: "h-5 min-w-5 px-1 font-mono tabular-nums") do %>
          8
        <% end %>
        <%= render BadgeComponent.new(variant: :secondary, classes: "h-5 min-w-5 px-1 font-mono tabular-nums") do %>
          24
        <% end %>
        <%= render BadgeComponent.new(variant: :destructive, classes: "h-5 min-w-5 px-1 font-mono tabular-nums") do %>
          99+
        <% end %>
        <%= render BadgeComponent.new(variant: :outline, classes: "h-5 min-w-5 px-1 font-mono tabular-nums") do %>
          5
        <% end %>
      </div>
    </div>

    <!-- Status Badges -->
    <div class="space-y-2">
      <h3 class="text-lg font-semibold text-muted-foreground">Status Badges</h3>
      <p class="text-sm text-muted-foreground">Common use cases for status indicators.</p>
      <div class="flex flex-wrap gap-3">
        <%= render BadgeComponent.new(classes: "bg-green-600 text-white hover:bg-green-600/90") do %>
          <%= lucide_icon("check-circle", class: "size-3") %>
          Active
        <% end %>
        <%= render BadgeComponent.new(classes: "bg-yellow-500 text-white hover:bg-yellow-500/90") do %>
          <%= lucide_icon("clock", class: "size-3") %>
          In Progress
        <% end %>
        <%= render BadgeComponent.new(classes: "bg-blue-600 text-white hover:bg-blue-600/90") do %>
          <%= lucide_icon("star", class: "size-3") %>
          Featured
        <% end %>
        <%= render BadgeComponent.new(variant: :outline, classes: "text-muted-foreground") do %>
          Draft
        <% end %>
      </div>
    </div>

    <!-- Custom Styling -->
    <div class="space-y-2">
      <h3 class="text-lg font-semibold text-muted-foreground">Custom Styling</h3>
      <p class="text-sm text-muted-foreground">Override default styles with custom classes.</p>
      <div class="flex flex-wrap gap-3">
        <%= render BadgeComponent.new(variant: :secondary, classes: "bg-purple-100 text-purple-700 dark:bg-purple-900 dark:text-purple-300") do %>
          Purple
        <% end %>
        <%= render BadgeComponent.new(variant: :outline, classes: "border-dashed") do %>
          Dashed Border
        <% end %>
        <%= render BadgeComponent.new(classes: "rounded-md") do %>
          Rounded MD
        <% end %>
        <%= render BadgeComponent.new(variant: :secondary, classes: "uppercase tracking-wider text-[10px]") do %>
          Uppercase
        <% end %>
      </div>
    </div>
  </section>

</div>
